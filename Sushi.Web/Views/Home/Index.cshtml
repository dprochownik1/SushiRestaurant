@using Sushi.Web.Models.Dtos
@model IEnumerable<DishDto>

<form>
    <div class="container row">

        @foreach(var dish in Model)
        {
        <div class="col-4 ">
            <div class="p-0 my-3 border">
                <div class="card">
                    <img src="@dish.ImageUrl" class="card-img-top" height="290p">
                    <div class="card-body">
                        <h3 class="card-title text-success">@dish.Name</h3>
                        <span class="badge badge-light mb-2 ">@dish.CategoryName</span>
                        <p class="card-text">@dish.Description</p>
                        <div class="row">
                            <div class="col pt-1">
                                <span style="font-size:23px;">@string.Format("{0:c}", dish.Price)</span>
                            </div>
                            <div class="col">
                                <a asp-action="Details" asp-route-dishId="@dish.DishId" class="btn btn-success form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
        

    </div>
</form>
